<!-- Additional section added to improve document outline -->
<section>
    <h1 class="offscreen">Footer</h1>
    <section class="column-container">
        <h2 class="offscreen">Copyright section</h2>
        <p><span id="copyright">{{ ./year }}</span> - All rights reserved</p>
    </section>
    <section class="social-media">
        <h2 class="offscreen">Social media links</h2>

        <!-- Iterate through the socialMedia array passed to extract each value -->
        {{#each ./socialMedia}}
            <a href="{{ ./link }}">
                <svg class="{{ ./class }}" role="img" title="{{ ./name }}">
                    <use xlink:href="images/icons.svg#{{ ./icon }}" />
                </svg>
            </a>
        {{/each}}
    </section>
</section>
